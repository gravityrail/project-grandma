<!doctype html>  
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ --> 
<!--[if lt IE 7 ]> <html class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>    <html class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html class="no-js ie8"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8">

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame 
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title><%= SITE_NAME %></title>
  <meta name="description" content="Project Grandma: Storytelling across the ages">
  <meta name="author" content="Kellea Shay Miller">

  <!--  Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Place favicon.ico & apple-touch-icon.png in the root of your domain and delete these references -->
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'style' %>
  <%-# stylesheet_link_tag 'handheld', :media=>'handheld' %>
  <%= stylesheet_link_tag 'grid' %>
  <%= stylesheet_link_tag 'formtastic' %>
  <%= stylesheet_link_tag 'formtastic_changes' %>
  <%= stylesheet_link_tag 'projectgrandma' %>
  <link href='http://fonts.googleapis.com/css?family=Goudy+Bookletter+1911' rel='stylesheet' type='text/css'>
  
  <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.js"></script>
  <script>!window.jQuery && document.write(unescape('%3Cscript src="/javascripts/libs/jquery-1.5.0.js"%3E%3C/script%3E'))</script>
  <%= javascript_include_tag 'libs/modernizr-1.6.min.js' %>
  <%= javascript_include_tag 'libs/jquery.html5_upload.js' %>

</head>

<body lang="en" >

  <div id="container">
    <header>

    </header>
    
    <div id="main" role="main">
      <div class="row">
      	<div id="header" class="column grid_12">
      	 <%= render :partial => 'shared/account' %>
      	 <h1><a href="/">Project Grandma</a></h1>
      	 <p class="subtitle">Celebrating the world's greatest storytellers.</p>
      	 <p><%= yield(:header) %></p>
        </div>
      </div>
      
      <div class="row">
        <div id="menu" class="column grid_12">
          <%= render_navigation(:level=>1) %>
        </div>
      </div>
      
      <div class="row">
        <div id="message" class="column grid_12">
          <% if flash[:notice] %>
            <p class="notice"><%= flash[:notice] %></p>
          <% end %>
          <% if flash[:error] %>
            <p class="error"><%= flash[:error] %></p>
          <% end %>
        </div>
      </div>
      
      <div class="row">
      	<div class="column grid_8">
      	  <div id="content">
            <%= yield %>
          </div>
      		<!--<div class="row">
      			<div class="column grid_4"><p>4</p></div>
      			<div class="column grid_4"><p>4</p></div>
      		</div>-->
      	</div>
      	<div class="column grid_4">
      	 
      	 <%= yield(:right) %>
      	 <!--<p style="line-height: 222px;">4</p>-->
        </div>
      </div>
    </div>
    
    <footer>

    </footer>
  </div> <!--! end of #container -->


  <!-- JavaScript at the bottom for fast page loading -->
  
  <!-- scripts concatenated and minified via ant build script-->
  <%= javascript_include_tag 'plugins' %>
  <%= javascript_include_tag 'script' %>
  <%= javascript_include_tag 'rails' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'libs/slDropFile' %>
  
  <!-- masonry -->
  <%= javascript_include_tag 'libs/jquery.masonry.js' %>
  
  <!-- butter -->
  <%= javascript_include_tag 'libs/popcorn/popcorn' %>
  <%= javascript_include_tag 'libs/popcorn/timebar' %>
  <%= javascript_include_tag 'libs/popcorn/plugins/subtitle/popcorn.subtitle.js' %>
  <%= javascript_include_tag 'libs/popcorn/plugins/lowerthird/popcorn.lowerthird.js' %>
  <%= javascript_include_tag 'libs/popcorn/plugins/image/popcorn.image.js' %>
  <%= javascript_include_tag 'libs/popcorn/parsers/parserXML/popcorn.parseXML.js' %>

  <%-# javascript_include_tag 'libs/popcorn/jquery-ui.min.js' %>
  <%-# javascript_include_tag 'libs/popcorn/underscore.min.js' %>
  <%-# javascript_include_tag 'libs/popcorn/jquery.ui.butter.min.js' %>
  <%-# javascript_include_tag 'libs/popcorn/jquery.scrolling-events.js' %>
  
  <!-- end concatenated and minified scripts-->
  
  
  <!--[if lt IE 7 ]>
    <script src="javascripts/libs/dd_belatedpng.js"></script>
    <script>DD_belatedPNG.fix('img, .png_bg'); // Fix any <img> or .png_bg bg-images. Also, please read goo.gl/mZiyb </script>
  <![endif]-->


